    #box1 > h2 {
       margin-left: 15px;
       text-align: center;
       color: palevioletred;
       font-style: italic;
    }
   

    #Youtubediv > a{
        margin-left: 55px;
        color: black;
        font-size: 1em;
        font-weight: bold;
        margin-bottom: 6px;
        font-style: italic;
    }
    #h1{
     margin-top: 10px;
      margin-left: 570px;
      color: steelblue;
      font-family: Georgia, 'Times New Roman', Times, serif;
      font-style: italic;
      border-bottom: 1px solid gray;
      width: 180px;

    }
